{    
    "name": "danc0/gimli",
    "version": "1.0.2",
    "type": "library",
    "description": "A PHP micro framework.",
    "authors": [
        {
            "name": "dvnc0",
            "email": "dcobb.dev@gmail.com"
        }
    ],
    "license": "Unlicense",
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-4": {
            "Gimli\\": "src/App/"
        }
    },
    "require": {
        "php": ">=8.1",
        "latte/latte": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.8",
        "phpunit/php-code-coverage": "^9.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit src/tests/",
        "coverage": "vendor/bin/phpunit --coverage-html src/tests/coverage/ src/tests/",
        "view": "xdg-open src/tests/coverage/index.html",
        "stan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "phpcs": "vendor/bin/phpcbf -p --colors --standard=phpcs.xml app --ignore=*/tmp/*; vendor/bin/phpcs -n --colors --standard=phpcs.xml app --ignore=*/tmp/*",
        "check": "composer run-script test; composer run-script stan; composer run-script phpcs"
    }
}
